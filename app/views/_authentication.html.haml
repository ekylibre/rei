= page :authentication do

  = page_header "Connexion"

  = page_content do
    %label#login-errors
    %form
      = field :instance do
        = label_tag :instance, "Instance"
        = text_field_tag(:instance, nil, placeholder: "https://demo.ergolis.com", required: true)
      = field :email do
        = label_tag :email, "Adresse e-mail"
        = email_field_tag(:email, nil, placeholder: "admin@ekylibre.org", required: true)
      = field :password do
        = label_tag :password, "Mot de passe"
        = password_field_tag(:password, nil, required: true)
      = button(:sign_in)
